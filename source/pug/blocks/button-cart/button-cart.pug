mixin button-cart(data)
    +el({
        tag: data.tag ? data.tag : 'button',
        class: 'button-cart',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
        before: data.before,
        after: data.after,
        position: data.position,
        title: data.title,
        target: data.target,
        href: data.href,
        title: 'Корзина'
    })&attributes(attributes)
        span.button-cart__inner
            +el({
                tag: 'svg',
                icon: data.icon,
                class: 'button-cart__icon',
            })
            +el({
                tag: 'span',
                class: 'button-cart__badge',
                text: data.badge
            })
