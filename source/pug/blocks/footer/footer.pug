mixin footer(data)
    -
        var info = [
            'О компании',
            'Производители',
            'Услуги',
            'Оплата и доставка',
            'Новости',
            'Статьи',
            'Контакты'
        ];
    -
        var nav1 = [
            'Автохимия. Автотовары',
            'Замочно-скобяные изделия',
            'Лако-красочные материалы',
            'Сад. Огород',
            'Инструмент',
            'Зоотовары',
            'Строительные материалы',
            'Крепеж. Метизы',
        ];
    -
        var nav2 = [
            'Отдых на природе',
            'Товары для дома. Хозтовары',
            'Строительный расходный материал',
            'Средства индивидуальной защиты',
            'Укрывочные материалы. Кровля',
            'Строительная химия. Сухие смеси',
            'Оснастки для электроинструмента',
        ];

    +el({
        tag: 'footer',
        class: 'footer',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
    })&attributes(attributes)
        .footer__top
            .footer__wrap
                .footer__company
                    +logo({
                        mix: 'footer__logo',
                        footer: true,
                        mod: 'footer'
                    })
                    +el({
                        mix: 'footer__text footer__text--address',
                        text: 'г. Симферополь, ул. Глинки, 55'
                    })
                    +el({
                        tag: 'a',
                        class: 'footer__phone',
                        href: 'tel:79788400180',
                        text: '+7 (978) 840-01-80'
                    })
                    +el({
                        mix: 'footer__text',
                        text: 'пн-пт с 8:00 до 18:00, <br>сб - с 8:00 до 15:00, <br>вс - выходной'
                    })
                .footer__nav.footer__nav--info(role='navigation' aria-label='Дополнительное меню' itemscope itemtype='http://schema.org/SiteNavigationElement')
                    h4.footer__title Информарция
                    +el({
                        tag: 'ul',
                        class: 'footer__list',
                    })
                        each item in info
                            +el({
                                tag: 'li',
                                class: 'footer__item',
                            })(itemprop='name')
                                +el({
                                    tag: 'a',
                                    text: item,
                                })(itemprop='url')
                .footer__nav.footer__nav--catalog(role='navigation' aria-label='Дополнительное меню' itemscope itemtype='http://schema.org/SiteNavigationElement')
                    h4.footer__title Каталог
                    .footer__list-row
                        +el({
                            tag: 'ul',
                            class: 'footer__list',
                        })
                            each item in nav1
                                +el({
                                    tag: 'li',
                                    class: 'footer__item',
                                })(itemprop='name')
                                    +el({
                                        tag: 'a',
                                        text: item,
                                    })(itemprop='url')
                        +el({
                            tag: 'ul',
                            class: 'footer__list',
                        })
                            each item in nav2
                                +el({
                                    tag: 'li',
                                    class: 'footer__item',
                                })(itemprop='name')
                                    +el({
                                        tag: 'a',
                                        text: item,
                                    })(itemprop='url')
        .footer__bottom
            .footer__wrap
                +el({
                    class: 'footer__copyright',
                    text: 'г. Симферополь ©&nbsp;Copyright&nbsp;2019&nbsp;г.'
                })
                .footer__made
                    | Сделанo в
                    +el({
                        tag: 'a',
                        title: 'Sheer',
                        href: 'https://sheer82.ru/'
                    })
                        +el({
                            tag: 'svg',
                            icon: 'sheer',
                        })
