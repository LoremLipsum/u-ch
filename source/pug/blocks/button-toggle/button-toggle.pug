mixin button-toggle(data)
    +el({
        tag: data.tag ? data.tag : 'button',
        class: 'button-toggle',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
        before: data.before,
        after: data.after,
        position: data.position,
        title: data.title,
        target: data.target,
        href: data.href
    })&attributes(attributes)
        if data.icon && !data.badge
            +el({
                tag: 'svg',
                icon: data.icon,
                class: 'button-toggle__icon',
            })
        if data.text && data.icon
            +el({
                tag: 'span',
                text: data.text,
                class: 'button-toggle__text',
            })
        if data.text && !data.icon
            #{data.text}
        if data.icon && data.badge
            .button-toggle__inner
                +el({
                    tag: 'svg',
                    icon: data.icon,
                    class: 'button-toggle__icon',
                })
                +el({
                    tag: 'span',
                    class: 'button-toggle__badge',
                    text: data.badge
                })
