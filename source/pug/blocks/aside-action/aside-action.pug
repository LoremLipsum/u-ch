mixin aside-action(data)
    +el({
        class: 'aside-action',
        mod: data.mod,
        mix: data.mix,
        js: data.js,
    })&attributes(attributes)
        +el({
            tag: 'picture',
            class: 'aside-action__picture',
        })
            source(srcset='assets/images/engineer.webp' type='image/webp')
            img.aside-action__image(src='assets/images/engineer.png' alt='Инженер')
        .aside-action__content
            +el({
                class: 'aside-action__heading',
                text: 'Будьте всегда в&nbsp;курсе',
            })
            +el({
                tag: 'p',
                class: 'aside-action__text',
                text: 'Узнавайте о&nbsp;скидках и&nbsp;акциях первыми!',
            })
            +f({
                class: 'aside-action__form',
            })
                +field({
                    mix: 'aside-action__field',
                    mod: ['bg-light', 'small'],
                    label: 'Ваш e-mail:',
                    placeholder: 'Ваш e-mail:',
                    type: 'email',
                })
                +button({
                    icon: 'telegram',
                    type: 'submit',
                    mix: 'aside-action__submit',
                })
