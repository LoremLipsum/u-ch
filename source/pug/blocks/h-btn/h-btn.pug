mixin h-button(data)
    +el({
        tag: data.tag ? data.tag : 'button',
        class: 'h-button',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
        before: data.before,
        after: data.after,
        position: data.position,
        title: data.title,
        target: data.target,
        href: data.href
    })&attributes(attributes)
        if data.icon
            +el({
                class: 'h-button__icon-wrap',
            })
                +el({
                    tag: 'svg',
                    icon: data.icon,
                    class: 'h-button__icon',
                })
            if data.badge
                +el({
                    tag: 'span',
                    class: 'h-button__badge',
                    text: data.badge
                })
        if data.text && data.icon
            +el({
                tag: 'span',
                text: data.text,
                class: 'h-button__text',
            })
        if data.text && !data.icon
            #{data.text}
