mixin delivery(data)
    +el({
        class: 'delivery',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
    })&attributes(attributes)
        .delivery__wrap
            .line
                +el({
                    tag: 'h2',
                    text: 'Доставка',
                })
            .delivery__row
                .delivery__col.delivery__col--left
                    +el({
                        tag: 'h4',
                        text: 'Выполняем доставку в&nbsp;Республике Крым по&nbsp;следующим направлениям:',
                        js: 'mh-delivery-heading'
                    })
                    +list({
                        mod: 'red-disc',
                        items: [
                            'Пионерское-Доброе-Заречное-Перевальное-Алушта-Партенит-Никита-Ялта;',
                            'Чистенькое-Бахчисарай-Инкерман-Севастополь;',
                            'Дубки-Кольчугино-Николаевка-Вилино;',
                            'Грэсовский-Школьное-Скворцово-Саки-Евпатория;',
                            'Гвардейское-Октябрьское-Красногвардейское-Джанкой;',
                            'Зуя-Белогорск-Старый Крым-Феодосия-Приморский-Ленино-Керчь;',
                            'Советский-Нижнегоский.',
                        ]
                    })

                .delivery__col.delivery__col--right
                    +el({
                        tag: 'h4',
                        text: 'Правила доставки товаров:',
                        js: 'mh-delivery-heading'
                    })
                    +list({
                        mod: 'blue-disc',
                        items: [
                            'Доставка осуществляется с&nbsp;понедельника по&nbsp;пятницу с&nbsp;9:00 до&nbsp;18:00.',
                            'Доставка осуществляется в соответствии с графиком согласованным с клиентом.',
                            'Если позиция заказная, то&nbsp;срок доставки обсуждается с&nbsp;менеджерами.',
                            'Если Вам нужна консультация по&nbsp;доставке, свяжитесь с&nbsp;нами по&nbsp;телефону: +7 (978) 840-01-80 и&nbsp;мы&nbsp;согласуем стоимость и&nbsp;сроки доставки индивидуально.',
                            'Доставка постоянным клиентам&nbsp;&mdash; минус&nbsp;2% от&nbsp;суммы заказа.',
                        ]
                    })
            .line
                +el({
                    tag: 'h2',
                    text: 'Оплата',
                })
            .delivery__row
                .delivery__col.delivery__col--left
                    +el({
                        tag: 'h4',
                        text: 'Виды оплаты:',
                    })
                    +list({
                        mod: 'blue-disc',
                        items: [
                            'Наличными курьеру;',
                            'Безналичный расчет через банк;',
                            'Оплата по выставленному счету (для юр. лиц).',
                        ]
                    })
                .delivery__col.delivery__col--right
                    +el({
                        tag: 'h4',
                        text: 'Оформление заказа по&nbsp;телефону:',
                    })
                    +el({
                        tag: 'a',
                        class: 'delivery__phone',
                        href: 'tel:+79788400180',
                        text: '+7 (978) 840-01-80'
                    })
