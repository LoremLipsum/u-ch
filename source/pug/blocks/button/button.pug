mixin button(data)
    if data.type == 'submit'
        +el({
            tag: 'label',
            class: 'button',
            mod: data.mod,
            mix: data.mix,
            js: data.js,
        })
            +el({
                tag: 'input',
                class: 'hidden',
                type: 'submit',
                disabled: data.disabled,
            })&attributes(attributes)
            | #{data.text}
            if data.icon
                +el({
                    tag: 'svg',
                    icon: data.icon,
                })

    else
        +el({
            tag: data.tag ? data.tag : 'button',
            class: 'button',
            mod: data.mod,
            mix: data.mix,
            js: data.js,
            type: data.type,
            text: data.text,
            before: data.before,
            after: data.after,
            target: data.target,
        })&attributes(attributes)
            if data.icon
                +icon({
                    mix: 'button__icon',
                    icon: data.icon,
                })
