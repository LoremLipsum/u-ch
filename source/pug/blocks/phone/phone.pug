mixin header-phone(data)
    +el({
        class: 'phone',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
    })&attributes(attributes)
        +el({
            tag: 'a',
            href: 'tel:79788400180',
            class: 'phone__link',
            text: '+7 (978) <span class="phone__num">840-01-80</span>',
        })
        +button({
            mix: 'phone__button dotted dotted--button',
            text: 'Обратный звонок'
        })
