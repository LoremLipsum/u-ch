include ./include
include ./data

block vars
    - var pageTitle = 'Title'
    - var main = false

doctype html
html(lang="ru-RU")
    block head
        +head()

    +el({
        tag: 'body',
        class: 'page',
        mod: modPage
    })
        .page__wrap
            block icon
            block header
                +header({})
            block intro
            block content
            block footer
                +footer({})

        +modal({
            js: 'modal-callback',
            heading: 'Обратный звонок',
        })
            +form({
                card: true,
                user: true,
                tel: true,
                confirm: true,
                submit: 'Заказать',
            })

        block scripts
            +scripts()
