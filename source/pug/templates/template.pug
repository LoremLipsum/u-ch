include ./include
include ./data

block vars
    - var pageTitle = 'Title'
    - var main = false

doctype html
html(lang="ru-RU")
    block head
        +head()

    +el({
        tag: 'body',
        class: 'page',
        mod: modPage
    })
        .page__wrap
            block icon
            block header
                +header({})
            block intro
            block content
            block footer
                +footer({})

        +modal({
            js: 'modal-callback',
            heading: 'Обратный звонок',
        })
            +form({
                group: [
                    {
                        icon: true,
                        firstName: true,
                        tel: true,
                        modField: ['with-icon', 'border-bottom'],
                    }
                ],
                confirm: true,
                submit: 'Заказать',
                modSubmit: 'center'
            })

        block scripts
            +scripts()
